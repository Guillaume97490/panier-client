<div class="card">
	<a href=""> 
		<img src="uploads/<%= article.image %>" class="card-img-top" alt="uploads/<%= article.image %>" />
	</a>
		<div class="card-body">
			<h5 class="card-title"><%= article.nom %></h5>
		<p class="card-text">
			<%= article.prix %> €
			<form action="" method="post">
				<label for="quantity">Quantité</label>
				<input type="number" name="quantity" class="form-control mb-2" min="0">
				<button class="btn btn-primary w-100" type="submit">Ajouter au panier</button>
			</form>
		</p>
	</div>
</div>
