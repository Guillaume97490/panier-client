<div class="modal" id="modal-edit-articles" style="display: none;">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			
		  <div class="modal-header">
			<h5 class="modal-title" id="">Modifier un article</h5>
			<button type="button" class="close btn-cancel-edit-article" data-dismiss="modal" aria-label="Close">
			  <span aria-hidden="true">&times;</span>
			</button>
		  </div>

		  <input type="number" name="article_id" id="article_id_edit" hidden>
		  <form id="form-edit-article" method="POST" action="" enctype="multipart/form-data">
		  <div class="modal-body">
				<div class="form-group">
					<label for="nom-article">Nom de l'article</label>
					<input type="text" name="nom_article" class="form-control" id="nom-article" required/>
				</div>
				<div class="form-group">
					<label for="detail-article">Détails sur l'article</label>
					<input type="text" name="detail_article" class="form-control" id="detail-article" required/>
				</div>
				<div class="form-group"> 
					<label for="prix-article">Prix de l'article</label>
					<input type="number" name="prix_article" class="form-control" id="prix-article" min="0" required/>
				</div>
	
				<div class="form-group">
					<label for="categorie-article">Catégorie de l'article</label>
					<select name="categorie_article" class="form-control" id="select-categories-edit" required>
					</select>
				</div>
			
				<div class="form-group">
					<label for="categorie-article">Image de l'article</label>
					<input type="file" name="image_article" class="form-control-file" id="image-article">
				</div>
			</div>
			
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary btn-cancel-edit-article">Annuler</button>
				<button type="submit" id="btn-edit-article" class="btn btn-primary">Modifier</button>
			</div>
		</form>
		  
		</div>
	  </div>
	
</div>
