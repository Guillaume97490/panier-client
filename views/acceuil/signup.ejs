<% include ../layouts/doctype.ejs %>


<div class="row">
    <div class="col-4"></div>
<div class="col-4">
    <div class="login-card-light p-3 shadow-lg rounded"style="margin-top: 20%;">
        <div class="pt-3">
            <h2 class="text-danger">Lancez-vous | Inscris toi</h2>
        </div>

        <form class="mt-5" role="form" action="" method="POST"> 
            
            
            <div class="form-group">
                <input type="text" 
                    name="nom"
                    class="form-control form-control-sm" 
                    placeholder="Votre nom">
            </div>


            <div class="form-group">
                <input type="email" 
                    name="mail"
                    class="form-control form-control-sm" 
                    placeholder="Email">
            </div>

            <div class="form-group">
                <input type="password" 
                    name="mdp"
                    class="form-control form-control-sm" 
                    placeholder="Votre mot de passe">
            </div>

            <div class="form-group">
                <input type="text" 
                    name="adresse"
                    class="form-control form-control-sm" 
                    placeholder="Votre adresse de livraison">
            </div>
           
            <div class="form-group">
                <input type="number" 
                    name="telephone"
                    class="form-control form-control-sm" 
                    placeholder="Votre numéros de téléphone">
            </div>



            <div class="mt-5">
                <button class="btn btn-sm btn-danger col">
                    Connexion
                </button>
            </div>

            <div class="text-center mt-2">
                <a href="#"> Password oublier?</a>
            </div>
            
            <div class="mt-5">
                <p class="text-center">
                    Vous être déjà inscrit ?
                    <a href="/login">Click ici pour te connecter</a>
                </p>
            </div>
        </form>
    </div>
</div>
</div>
