<% include ../layouts/doctype.ejs %>

<% if(locals.errorMsg) { %>
    <%=errorMsg%>
<%}%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card"style="margin-top: 20%;">

            <div class="login-card-light p-3 shadow-lg rounded">
                <div class="pt-3">
                    <h2 class="text-danger">Connexion</h2>
                </div>
    
                <form id="login-form" data-parsley-validate class="mt-5" role="form" action="" method="POST">
    
    
                    <div class="form-group">
                        <input type="email" name="email_user" id="login-email" class="form-control form-control-sm" placeholder="Email" required>
                    </div>
    
                    <div class="form-group">
                        <input type="password" name="password_user" id="login-password" class="form-control form-control-sm" placeholder="Votre mot de passe" required>
                    </div>
    
    
                    <div class="mt-5">
                        <button id="login-submit-btn" class="btn btn-sm btn-danger col">
                            Connexion
                        </button>
                    </div>
    
                    <div class="text-center mt-2">
                        <a href="#">Mot de passe oubli√© ?</a>
                    </div>
    
                    <div class="mt-5">
                        <p class="text-center">
                            Vous n'avez pas de compte ?
                            <a href="/signup">Cliquez ici pour vous inscrire</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
    
</div>

